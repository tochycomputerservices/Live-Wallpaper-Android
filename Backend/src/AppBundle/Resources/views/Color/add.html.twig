{% extends "AppBundle::layout.html.twig" %}
{% block body%}
<div class="container-fluid">
    <div class="row">
       <div class="col-sm-offset-2 col-md-8">
            {{form_start(form)}}
            <div class="card">
                {{form_widget(form.code,{"attr":{"class":"color-input-add jscolor"}})}}
                <div class="card-header card-header-icon" data-background-color="rose">
                    <i class="material-icons">color_lens</i>
                </div>
                <div class="card-content">
                    <h4 class="card-title">New color</h4>
                    
                    <form method="#" action="#">
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">Color title</label>
                            {{form_widget(form.title,{"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.title)}}</span>
                        </div>
                        <br>
                        <span class="pull-right"><a href="{{path("app_color_index")}}" class="btn btn-fill btn-yellow"><i class="material-icons">arrow_back</i> Cancel</a>{{form_widget(form.save,{attr:{"class":"btn btn-fill btn-rose"}})}}</span>
                </div>
            </div>
            {{form_end(form)}}
        </div>
    </div>
</div>
{% endblock%}